<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu_background"
            android:orientation="vertical">

            <noclay.treehole3.OtherPackage.MyCircleImageView
                android:id="@+id/userImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="您还没有登录"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/my_tree_hole"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/itemHeight"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/id_img1"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:padding="2dp"
                android:src="@drawable/tree_hole_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_img1"
                android:text="我的倾诉"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_love_wall"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/itemHeight">

            <ImageView
                android:id="@+id/id_img5"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@drawable/love2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_img5"
                android:text="我的表白墙"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>
<!--添加一个未实现的树洞漂流瓶-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/itemHeight">

            <ImageView
                android:id="@+id/id_img6"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@drawable/pingzi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_img6"
                android:text="树洞漂流瓶（开发中）"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/change_passWord"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/itemHeight">

            <ImageView
                android:id="@+id/id_img2"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@drawable/password_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_img2"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toggle_account"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/itemHeight">

            <ImageView
                android:id="@+id/id_img3"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_img3"
                android:text="切换用户"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toggle_theme"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/itemHeight">

            <ImageView
                android:id="@+id/id_img4"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@drawable/theme_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_img4"
                android:text="切换主题"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>


    </LinearLayout>

    <!--实现底部的小UI-->
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:textColor="#11B6F4"
                android:textSize="40sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-30dp"
                android:text="。"
                android:textColor="#11B6F4"
                android:textSize="40sp" />
        </LinearLayout>
        <TextView
            android:textColor="@color/darkGray"
            android:textSize="15sp"
            android:text="西安 小雨"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>